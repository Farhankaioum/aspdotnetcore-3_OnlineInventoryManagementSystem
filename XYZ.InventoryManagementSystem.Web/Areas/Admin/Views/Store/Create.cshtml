@model XYZ.InventoryManagementSystem.Web.Areas.Admin.Models.StoreViewModel.StoreViewModel
@{
    Layout = null;
}

<h2>Create Store</h2>
<form asp-action="Create" onsubmit="return jQueryAjaxPost(this)" autocomplete="off">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label"></label>
    </div>
    <div>
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Store" asp-area="Admin" class="btn btn-success">Back to List</a>
    </div>
</form>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/site.js"></script>
