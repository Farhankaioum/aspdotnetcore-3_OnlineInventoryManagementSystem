@model CompanyEditViewModel
@{

}

<nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="#">Manage <small class="text-dark">Company</small></a>
</nav>

<form method="post" asp-area="Admin" asp-controller="Company" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChargeAmount" class="font-weight-bold"></label>
        <input asp-for="ChargeAmount" class="form-control" placeholder="Charge amount %" />
        <span asp-validation-for="ChargeAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VatCharge" class="font-weight-bold"></label>
        <input asp-for="VatCharge" class="form-control" />
        <span asp-validation-for="VatCharge" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="font-weight-bold"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="font-weight-bold"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="font-weight-bold"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control" rows="3" placeholder="Enter company message here!.."></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Currency"></label>
        <input asp-for="Currency" class="form-control" />
        <span asp-validation-for="Currency" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-success p-2">Save Changer</button>
    </div>

</form>

@section Scripts{
    
    <partial name="_ValidationScriptsPartial" />
    
}


