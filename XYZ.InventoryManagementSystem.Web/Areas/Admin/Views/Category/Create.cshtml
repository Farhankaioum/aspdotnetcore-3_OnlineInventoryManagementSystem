@model CategoryViewModel
@{

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header ml-3">
        <h2>Create Category</h2>
        <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Status" class="form-check-input" />
                <label asp-for="Status" class="form-check-label"></label>
            </div>
            <div>
                <button type="submit" class="btn btn-info">Create</button>
                <a asp-action="Index" asp-controller="Category" asp-area="Admin" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

