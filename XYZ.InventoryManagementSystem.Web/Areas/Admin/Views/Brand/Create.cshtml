@model BrandViewModel
@{

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <h2>Create Brand</h2>
        <form method="post" asp-area="Admin" asp-controller="Brand" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group form-check">
                    <input asp-for="Status" class="form-check-input" />
                    <label asp-for="Status" class="form-check-label"> </label>
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-info pr-2">Create</button>
                <a asp-action="Index" asp-controller="Brand" asp-area="Admin" class="btn btn-success ml-1">Back to List</a>
            </div>
        </form>
        </div>
    </div>
