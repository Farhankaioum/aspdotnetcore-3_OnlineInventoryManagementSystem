@model XYZ.InventoryManagementSystem.Web.Areas.Admin.Models.StoreViewModel.StoreIndexViewModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Active Status</th>
            <th>Action</th>
            <th>
                <a onclick="showInPopUp('@Url.Action("Create", "Store", null, Context.Request.Scheme)', 'New Store')" class="btn btn-success text-white">
                    <i class="fas fa-random"></i> New Store
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model.Stores)
        {
            <tr>
                <td>@store.Name</td>
                <td>@store.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-Id="@store.Id" class="btn btn-primary float-left mr-2">Edit</a>


                    <form method="post" asp-action="Delete" asp-route-id="@store.Id">
                        <button type="submit" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>