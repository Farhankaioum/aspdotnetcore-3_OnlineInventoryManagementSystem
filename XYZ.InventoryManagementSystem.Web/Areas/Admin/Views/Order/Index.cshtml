@model XYZ.InventoryManagementSystem.Web.Areas.Admin.Models.OrderViewModel.OrderIndexViewModel
@{
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header ml-3">
        <h2>List of all orders</h2>

        <table class="table">
            <thead>
                <tr>
                    <td>Customer Name</td>
                    <td>Customer Address</td>
                    <td>Customer Phone</td>
                    <td>Quantity</td>
                    <td>Total Amount</td>
                    <td>Vat</td>
                    <td>Discount</td>
                    <td>Net Amount</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.CustomerName</td>
                        <td>@order.Address</td>
                        <td>@order.Phone</td>
                        <td>@order.Qty</td>
                        <td>@order.GrossAmount</td>
                        <td>@order.Vat</td>
                        <td>@order.Discount</td>
                        <td>@order.NetAmount</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-info">Edit</a>
                            <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
